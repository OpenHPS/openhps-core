{
  "name": "@openhps/core",
  "version": "1.0.0-alpha.20",
  "description": "Open Hybrid Positioning System - Core component",
  "author": "Maxim Van de Wynckel",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://git.mvdw-software.com/Maximvdw/openhps-core.git"
  },
  "publishConfig": {
    "registry": "https://repo.mvdw-software.com/repository/npm-openhps/"
  },
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha --experimental-worker",
    "test:jenkins": "jenkins-mocha",
    "cover": "nyc mocha && nyc report --reporter=cobertura",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "clean": "shx rm -rf ./dist && shx rm -rf ./docs",
    "build": "npm run clean && npm-run-all --parallel build:**",
    "build:typescript": "tsc",
    "build:typedoc": "typedoc --exclude **/_internal/**/* --excludePrivate --hideGenerator --out docs src",
    "publish:development": "standard-version --prerelease alpha -m 'chore(alpha): %s [ci-skip]' && npm publish --tag dev",
    "publish:beta": "standard-version --prerelease beta -m 'chore(beta): %s [ci-skip]' && npm publish --tag beta",
    "publish:release": "standard-version -m 'chore(release): %s [ci-skip]' && npm publish --tag latest"
  },
  "keywords": [
    "openhps",
    "ips",
    "slam",
    "hybrid",
    "positioning",
    "system"
  ],
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "threads": "^1.0.0",
    "tiny-worker": "^2.3.0",
    "typedjson": "^1.5.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@types/uuid": "^3.4.6",
    "chai": "^4.2.0",
    "husky": "^4.0.10",
    "jenkins-mocha": "^8.0.0",
    "mocha": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "shx": "^0.3.2",
    "standard-version": "^7.0.1",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "tslint-no-circular-imports": "^0.7.0",
    "typedoc": "^0.15.8",
    "typescript": "^3.7.5"
  },
  "nyc": {
    "branches": 20,
    "lines": 20,
    "functions": 20,
    "statements": 20,
    "include": [
      "src"
    ],
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "check-coverage": true,
    "report-dir": "./coverage"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --no-verify"
    }
  }
}
